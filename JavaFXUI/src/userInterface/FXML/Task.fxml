<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane fx:id="taskBorderPane" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="2000.0" prefWidth="2000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TaskController">
   <top>
      <ToolBar fx:id="toolBar">
         <items>
            <HBox fx:id="toolBarHbox">
               <children>
                <Button fx:id="runButton" mnemonicParsing="false" onAction="#runPressed" text="Run">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="PauseButton" mnemonicParsing="false" onAction="#pausePressed" text="Pause">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="stopButton" mnemonicParsing="false" onAction="#stopPressed" text="Stop">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="selectAllButton" mnemonicParsing="false" onAction="#selectAllPressed" text="Select All">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="deselectAllButton" mnemonicParsing="false" onAction="#deselectAllPressed" text="Deselect All">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </items>
      </ToolBar>
   </top>
   <left>
      <Pane fx:id="leftPane" prefHeight="365.0" prefWidth="253.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <children>
            <ComboBox fx:id="taskSelection" layoutX="28.0" layoutY="52.0" onAction="#taskSelectionPressed" prefWidth="150.0" promptText="-Task Selection-" />
            <ComboBox fx:id="targetSelection" disable="true" layoutX="28.0" layoutY="103.0" onAction="#targetSelectionPressed" prefWidth="150.0" promptText="-Target-" />
            <ComboBox fx:id="affectedTargets" disable="true" layoutX="28.0" layoutY="158.0" onAction="#affectedTargetsPressed" prefWidth="150.0" promptText="-Affected Targets-" />
            <ListView fx:id="currentSelectedTargetListView" layoutX="28.0" layoutY="243.0" prefHeight="200.0" prefWidth="190.0" />
            <Label layoutX="61.0" layoutY="217.0" text="Current Selected Targets" />
         </children>
      </Pane>
   </left>
   <center>
      <TabPane fx:id="tabPane" BorderPane.alignment="CENTER">
         <tabs>
            <Tab fx:id="tableViewTabPane" onSelectionChanged="#tableViewTabPressed" text="Table View">
               <content>
                  <Pane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="taskTargetDetailsTableView" layoutX="59.0" layoutY="47.0" prefHeight="272.0" prefWidth="802.0">
                          <columns>
                            <TableColumn fx:id="numberColumn" prefWidth="22.0" text="#" />
                            <TableColumn fx:id="targetNameColumn" prefWidth="85.0" text="Target Name" />
                              <TableColumn fx:id="positionColumn" prefWidth="63.5" text="Position" />
                              <TableColumn fx:id="directDependsOnColumn" prefWidth="118.0" text="Direct Depends On" />
                              <TableColumn fx:id="directRequiredForColumn" prefWidth="122.0" text="Direct Required For" />
                              <TableColumn fx:id="executionTimeStatus" prefWidth="146.0" text="Execution Time Status" />
                              <TableColumn fx:id="finalStatus" minWidth="3.5" prefWidth="79.0" text="Final Status" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </Pane>
               </content>
            </Tab>
            <Tab fx:id="graphViewTabPane" onSelectionChanged="#graphViewTabPressed" text="Graph View">
               <content>
                  <Pane prefHeight="200.0" prefWidth="200.0" />
               </content>
            </Tab>
            <Tab fx:id="graphViewTabPane1" onSelectionChanged="#logViewTabPressed" text="Log">
               <content>
                  <Pane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <TextArea disable="true" editable="false" layoutX="14.0" layoutY="14.0" prefHeight="550.0" prefWidth="535.0" />
                     </children>
                  </Pane>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
   <bottom>
      <Pane fx:id="footerPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="proccesingTimeLabel" layoutX="84.0" layoutY="38.0" text="Processing Time (m/s) : " />
            <Label fx:id="limitedPermanentLabel" layoutX="84.0" layoutY="78.0" text="Limited/Permanent : " />
            <Label fx:id="successRateLabel" layoutX="84.0" layoutY="113.0" text="Success Rate :" />
            <Label fx:id="successRateWithWarnings" layoutX="84.0" layoutY="150.0" text="Success Rate With Warnings : " />
            <Label layoutX="84.0" layoutY="145.0" />
            <Spinner fx:id="processingTimeSpinner" layoutX="243.0" layoutY="34.0" />
            <RadioButton fx:id="limitedRadioButton" layoutX="243.0" layoutY="78.0" mnemonicParsing="false" onAction="#limitedOptionPressed" text="Limited">
               <toggleGroup>
                  <ToggleGroup fx:id="limitedOrPermanent" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="permanentRadioButton" layoutX="326.0" layoutY="78.0" mnemonicParsing="false" onAction="#permanentOptionPressed" selected="true" text="Permanent" toggleGroup="$limitedOrPermanent" />
            <Slider fx:id="successRateSlider" layoutX="242.0" layoutY="115.0" />
            <Slider fx:id="successRatewithWarningsSlider" layoutX="242.0" layoutY="152.0" />
            <Label fx:id="successRateValueLabel" layoutX="391.0" layoutY="113.0" text="value" />
            <Label fx:id="successRateWithWarningsValueLabel" layoutX="391.0" layoutY="151.0" text="value" />
         </children>
      </Pane>
   </bottom>
</BorderPane>
